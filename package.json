{
  "name": "jsexam",
  "version": "1.0.0",
  "description": "jExam enrollment schedules at a glance. A simple static website with Express (Node.JS) backend to display jExam enrollment schedules.",
  "scripts": {
    "postinstall": "cd api && yarn install",
    "start": "webpack-dev-server --open --hot --mode development",
    "build": "webpack --mode production",
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint --fix . --ext .js",
    "format": "prettier --write \"**/*.+(js|jsx|json|css|scss|md)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsExam/jsExam.git"
  },
  "author": "Felix KÃ¤stner <hello@felix-kaestner.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jsExam/jsExam/issues"
  },
  "homepage": "https://jsexam.github.io/jsExam/",
  "dependencies": {
    "animejs": "^3.2.0",
    "bulma": "^0.9.0",
    "date-fns": "^2.16.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.0",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.3.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "gh-pages": "^3.1.0",
    "html-loader": "^1.3.0",
    "html-webpack-plugin": "^4.4.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "node-sass": "^4.14.0",
    "prettier": "^2.1.0",
    "sass-loader": "^10.0.0",
    "style-loader": "^1.2.0",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn format"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|scss|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "resolutions": {
    "kind-of": "^6.0.3",
    "node-forge": "^0.10.0"
  }
}
